{
  "compilerOptions": {
    "baseUrl": ".", // <-- TAMBAHKAN INI
    "paths": {
      // <-- TAMBAHKAN BLOK INI
      "@/*": ["src/*"]
    },
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/app/(dashboard)/dashboard/kas/rekapitulasi/RekapClient.jsx",
    "src/app/(dashboard)/dashboard/kas/rekapitulasi/ToolbarClient.jsx"
  ],
  "exclude": ["node_modules"]
}
